".source.js, .source.js-semantic":
	hover:
		prefix: "hover"
		body: '''
			hover(function() {
				${1:/* Stuff to do when the mouse enters the element */}
			}, function() {
				${2:/* Stuff to do when the mouse leaves the element */}
			});$0
		'''
".source.coffee":
	hover:
		prefix: "hover"
		body: '''
			hover ->
				${1:# Stuff to do when the mouse enters the element}
			, ->
				${2:# Stuff to do when the mouse leaves the element}
			$0
		'''
